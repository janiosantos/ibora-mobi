    "jest-expo": "^54.0.16",
    "react-test-renderer": "19.1.0",
    "typescript": "~5.9.2"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFiles": [
      "./jest.setup.js"
    ],
    "moduleNameMapper": {
      "^@expo/vector-icons$": "<rootDir>/__mocks__/expo-vector-icons.js",
